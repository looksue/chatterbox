<!-- Saved question modal popup -->
<div id="modalMessage" class="modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <h4>Question Saved!</h4>
    </div>
  </div>
</div>

<h1>Chat Overflow</h1>
<!-- Navigation bar-->
<nav>
  <div>
    <a href="/">Chatterbox Question Scraper</a> |
    <a href="/scraper">Scrape Questions</a> |
    <a href="/Questions">Saved Questions</a>
  </div>
</nav>

<!-- Main -->

{{!-- banner asking user to scrape or inform user how many articles have been scraped --}}
<div class="row center">
  <ul class="collection">
    {{#unless this.num}}
    <li class="collection-item grey lighten-1 black-text">
      <h4>Scrape questions by pressing the Scrape Questions link.</h4>
    </li>
    {{/unless}}
    {{#if this.num}}
    <li class="collection-item grey lighten-1 white-text">
      <h4>You have scraped {{this.num}} questions.</h4>
    </li>
    {{/if}}
  </ul>
</div>

<!-- Questions go here -->
<div class="container">
  <div class="row">
    {{#each question}}
    <div class="col s12 m12 l6 xl4" id="{{this.link}}" style="display:inline-block;">
      <div class="card">
        <div style="height: 100%; width: 100%; position:absolute; z-index:1000;"></div>
        <span class="card-title">{{this.title}}</span>
        <a class="addArticle btn-floating halfway-fab modal-trigger" style="z-index:101" href="#modalMessage"
          data-target="#modalMessage" data-toggle="modal" id="save" data-id="{{this._id}}" data-title="{{this.title}}"
          data-link="{{this.link}}">Save</a>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          <p><a href="{{this.link}}">Link to Question</a></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>

<!-- Saved question popup -->
<div id="articleModal" class="modal modal-fixed-footer">
  <div class="modal-content center">
    <h4>Question<span id="articleID"></span></h4>
    <div class="articleNotes">
      <div class="boxComments">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-stacked center">
              <div class="card-content valign-wrapper">
                <p>No Notes.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1">Placeholder</label>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close btn-flat hover addComment" style="color:white;">Add</a>
  </div>
</div>

<!-- Slide UP Articles Modal Structure -->
<div id="saveModal" class="modal bottom-sheet">
  <div class="modal-content">
    <h4 style="color:black;">Saved Questions</h4>
    <ul class="collection">
    </ul>
  </div>
</div>