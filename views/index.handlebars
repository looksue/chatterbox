<!-- Navigation -->
<nav>
  <div>
    <a href="#">Chatterbox Question Scraper</a>
    <br /><br />
    <a href="/scraper">Scrape Questions</a>
    <br /> <br />
    <a href="/Questions">Saved Questions</a>
    <br /><br />
  </div>
</nav>

<!-- Main -->

  {{!-- banner asking user to scrape or inform user how many articles have been scraped --}}
  <div class="row center">
       <ul class="collection">
          {{#unless this.num}}
             <li class="collection-item grey lighten-1 black-text"><h4>Scrape questions by pressing the Scrape Questions link/button.</h4></li>
          {{/unless}}                  
          {{#if this.num}}             
              <li class="collection-item red lighten-1 white-text"><h4>You have scraped {{this.num}} questions.</h4></li>
          {{/if}}
      </ul>
  </div>

<div class="container">
  <div class="row">
    {{#each data}}
    <div class="col s12 m12 l6 xl4" id="{{this.url}}" style="display:inline-block;">
      <div class="card">
        <div class="card-image" style="position:relative;">
          <div style="height: 100%; width: 100%; position:absolute; z-index:1000;"></div>
          <img src="{{this.imageURL}}">
          <span class="card-title">{{this.headline}}</span>
          <a class="addArticle btn-floating halfway-fab waves-effect waves-light red modal-trigger" style="z-index:101;"
            href="#modalMessage" data-headline="{{this.headline}} " data-imageURL="{{this.imageURL}}"
            data-url="{{this.url}}" data-summary="{{this.summary}}" data-slug="{{this.slug}}"><i
              class="material-icons">add</i></a>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{this.slug}}<i
              class="material-icons right">more_vert</i></span>
          <p><a href="{{this.url}}">Link to Article</a></p>
        </div>
        <div class="card-reveal" style="z-index:102;">
          <span class="card-title grey-text text-darken-4">{{this.slug}}<i class="material-icons right">close</i></span>
          <p>{{this.summary}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<!-- Saved popup -->
<div id="modalMessage" class="modal">
  <div class="modal-content">
    <h4>Question Saved!</h4>
  </div>
</div>

<!-- Saved question popup -->
<div id="articleModal" class="modal modal-fixed-footer">
  <div class="modal-content center">
    <h4>Question<span id="articleID"></span></h4>
    <div class="articleNotes">
      <div class="boxComments">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="">
            </div>
            <div class="card-stacked center">
              <div class="card-content valign-wrapper">
                <p>No Notes.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1">Placeholder</label>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close btn-flat hover addComment" style="color:white;">Add</a>
  </div>
</div>

<!-- Slide UP Articles Modal Structure -->
<div id="saveModal" class="modal bottom-sheet">
  <div class="modal-content">
    <h4 style="color:black;">Saved Questions</h4>
    <ul class="collection">
    </ul>
  </div>
</div>